REM   BULLET3a for the Psion Series 3a
REM        The Director's Cut
REM     Author: Dr Shane McKee. 2025 

REM  Bullet3a allows you to sort topics,
REM  take notes, etc. It doesn't try to
REM  emulate a paper journal, but rather
REM  to complement it.
REM Bullets have fields for SBAR


APP Bullet3a
	EXT "BLJ"
	PATH "\BLJ"
	ICON "LOC::M:\PIC\BULLET3A.PIC"
	TYPE $1003
	REM this indicates that the app uses files
ENDA



PROC Bullet3a: :REM Startup
REM First, let's set up some globals.

	GLOBAL Pat$(25),Con$(255),Hno$(11),War$(255),Dob&
	GLOBAL Adm&,Dis&,Regown$(30),Code$(10),Adt$(255)
	GLOBAL Dia1t$(255),Rt%,K%,Res$(255),Ffm$(255)
	GLOBAL Med$(255),War%,Con%,H%,Diag$(255)
	GLOBAL Adr$(125),Gp$(125),Adt%,Archfil$(128),Gi%(32)
	GLOBAL Ft%,Ft2%,Ft3%,Ft4%,Flg%
	GLOBAL Find$(20),Foldlab$(32),Km%,Sw%,Scrw%
	GLOBAL Wd%(20),Curp%,Curw%,Pick$(25),Pick%
	GLOBAL Tabwid%,Usty%,G1%,G2%,Wg1%
	GLOBAL Wg2%,Det%,I$(10,40),N%,B%
	GLOBAL Ge%(6),Ver$(30)
	
	REM Declare local variables
	LOCAL lc2z%,lc1z%
  
	Regown$="Psion Hero"
  Ver$="Ver 0.01 7 Feb 2025"
  Det%=1
  Wg1%=250
  Scrw%=480 :REM screen width
  Wg2%=Scrw%-Wg1%
  Ft%=6
  Ft2%=5
  Ft3%=6
  Ft4%=10
  Archfil$="M:\BLJ\ARCHFIL.BLJ"
  Usty%=32
  Tabwid%=Wg1%/2
  G2%=gCREATE(Wg1%+2,0,Wg2%,160,1,1)
  G1%=gCREATE(0,0,Wg1%,160,1,1)
  H%=5
  TRAP MKDIR "LOC::M:\BLJ"
  IF CMD$(3)="O"
    Opfil:(CMD$(2))
  ELSEIF CMD$(3)="C"
    Nufil:(CMD$(2))
  ENDIF
  IF EXIST("LOC::M:\APP\BULLET3A.INI")
    OPEN "LOC::M:\APP\BULLET3A.INI",B,A$,B$,C$
    Regown$=B.A$
    Code$="Registered"
    CLOSE
    GIPRINT "Registered to "+Regown$+", "+Ver$
    About:
  ENDIF
  
  Setupw:
  gFONT ft%
  gINFO gi%()
  curw%=1 : REM Current section
  H%=1
  curp%=1 : REM Current slot
  gUPDATE OFF
  pick$=""
  pick%=0

  DO
    Newlist:
    gUSE g1%
    lc1z%=(curp%-1)/10
    lc2z%=curp%-lc1z%*10
    gSTYLE 4
    gAT 2+lc1z%*Tabwid%,14*lc2z%+15 : REM
    gGREY 1
    gPRINTB pick$,Tabwid%-2
    gGREY 0
    gSTYLE 0
    LOCK OFF
    H%=5
    K%=Getk%:
    gAT 2+lc1z%*Tabwid%,14*lc2z%+15
    gGREY 1
    gPRINTB "",Tabwid%-2
    gGREY 0
    Keyctrl:
  UNTIL K%=120+512
ENDP



PROC Getk%:
  LOCAL lc3z$(128)
  GETEVENT Ge%()
  IF Ge%(1) AND 1024
    IF Ge%(1)=1028
      lc3z$=GETCMD$
      IF LEFT$(lc3z$,1)="X"
        STOP
      ELSEIF LEFT$(lc3z$,1)="O"
        Opfil:(MID$(lc3z$,2,127))
      ELSEIF LEFT$(lc3z$,1)="C"
        Nufil:(MID$(lc3z$,2,127))
      ENDIF
    ELSE
      H%=0
    ENDIF
  ENDIF
  Km%=255 AND Ge%(2)
  RETURN Ge%(1)
ENDP



PROC NEWLIST:
REM This Procedure refreshes the section view

  LOCAL lc4z%,lc5z%,dmyz1%,lc6z%,lc7z%
  LOCAL lc8z%,lc9z%,dmyz2$(42),lc10z$(30)
  lc4z%=POS
  gUSE G1%
  IF H% AND 4
    gGREY 2
    gCLS
    gGREY 0
  ENDIF
  IF H% AND 1
    IF H%<>3
      Pick%=0
      Pick$=""
    ENDIF
    IF Sw%>0
      DIAMINIT Det%,"Situation","Background","Assessment","Recommendation"
      REM XXXX Need to allow these to be changed
    ENDIF
    lc5z%=1
    DO
      Wd%(lc5z%)=0
      lc5z%=lc5z%+1
    UNTIL lc5z%=21
    IF curw%<9
      Itemise:(war$,",")
      Foldlab$=I$(Curw%)
      FIRST
      DO
        lc6z%=A.war%/30
        lc7z%=A.war%-30*lc6z%
        IF Curw%=lc6z% AND lc7z%<21 AND lc7z%
          IF Wd%(lc7z%)<>0
            GIPRINT "OVERLAP "+GEN$(Curp%,2)
          ENDIF
          Wd%(lc7z%)=POS
        ENDIF
        NEXT
      UNTIL EOF
    ELSEIF Curw%>8
      FIRST
      lc7z%=1
      DO
        lc6z%=A.WAR%/30
        IF Curw%=lc6z%
          Wd%(lc7z%)=POS
          lc7z%=lc7z%+1
        ENDIF
        NEXT
        IF lc7z%>20
          GIPRINT "Buffer full! Delete or archive to free space"
          BREAK
        ENDIF
      UNTIL EOF
      IF Curw%=9
        Foldlab$="OUTGOING BUFFER"
      ELSEIF Curw%=10
        Foldlab$="INCOMING BUFFER"
      ENDIF
    ENDIF
    gAT 0,13
    gXBORDER 0,0,Tabwid%*2,147
REM    gAT 0,0
REM    gXBORDER 0,1,Tabwid%*2,12
    gFONT 6
    gSTYLE 1
    gAT 3,9
    gPRINTB "þ Bullet3a >>> "+Foldlab$,Tabwid%*2-6
    gFONT Ft%
    gSTYLE 0
    gAT Wg1%/2,15
    gLINEBY 0,142
    lc5z%=1
    DO
      lc8z%=(lc5z%-1)/10
      lc9z%=lc5z%-lc8z%*10
      IF Wd%(lc5z%)<>0
        POSITION Wd%(lc5z%)
        REM "POSITION" means jump to position in file containing this record
        IF Det%=4 AND A.FFM$<>""
          gSTYLE Usty%
          REM ffm$ is RECOMMENDATION
        ELSEIF Det%=3 AND A.RES$<>""
          gSTYLE Usty%
          REM res$ is ASSESSMENT
        ELSEIF Det%=2 AND A.MED$<>""
          gSTYLE Usty%
          REM med$ is BACKGROUND
        ELSEIF Det%=1 AND A.DIAG$<>""
          REM diag$ is SITUATION
          gSTYLE Usty%
        ENDIF
        gAT 3+lc8z%*Tabwid%,lc9z%*14+15
        gPRINTB A.PAT$,Tabwid%-4
        gSTYLE 0
      ELSE
        gAT 3+lc8z%*Tabwid%,lc9z%*14+15
        gPRINTB "þ",Tabwid%-4
      ENDIF
      lc5z%=lc5z%+1
    UNTIL lc5z%=21
  ENDIF
  
  
	REM Now set up the right-hand window
  gUSE G2%
  gCLS
  IF Wd%(Curp%)<>0
    POSITION Wd%(Curp%)
    gSTYLE 0
    gFONT Ft3%
    gINFO Gi%()
    gAT 2,Gi%(5)+1
    gPRINTB A.PAT$,Wg2%,2
    gSTYLE 0
    gMOVE 0,Gi%(3)+1
		REM gPRINTB "   ID:  "+A.HNO$,Wg2%
    gMOVE 0,Gi%(3)+1
    IF A.DOB&>0
      gPRINTB "   Due: "+Dt$:(A.DOB&),Wg2%
    ENDIF
    gFONT 9
    gINFO Gi%()
    lc10z$=CHR$(4)+" Fields:"
    IF A.DIAG$<>""
      lc10z$=lc10z$+" S"
    ENDIF
    IF A.MED$<>""
      lc10z$=lc10z$+" B"
    ENDIF
    IF A.RES$<>""
      lc10z$=lc10z$+" A"
    ENDIF
    IF A.FFM$<>""
      lc10z$=lc10z$+" R"
    ENDIF
    gSTYLE 1
    gMOVE 0,Gi%(3)+3
    gPRINTB "   "+lc10z$,Wg2%
    gFONT Ft2%
    gINFO Gi%()
    IF Det%=1
      gSTYLE 1
      gMOVE 0,Gi%(3)+2
      gPRINTB "-: SITUATION :-",Wg2%
      Itemise:(A.DIAG$,"þ")
    ELSEIF Det%=2
      gSTYLE 1
      gMOVE 0,Gi%(3)+2
      gPRINTB "-: BACKGROUND :-",Wg2%
      Itemise:(A.MED$,"þ")
    ELSEIF Det%=3
      gSTYLE 1
      gMOVE 0,Gi%(3)+2
      gPRINTB "-: ASSESSMENT :-",Wg2%
      Itemise:(A.RES$,"þ")
    ELSEIF Det%=4
      gSTYLE 1
      gMOVE 0,Gi%(3)+2
      gPRINTB "-: RECOMMENDATION :-",Wg2%
      Itemise:(A.FFM$,"þ")
    ENDIF
    lc5z%=1
    WHILE I$(lc5z%)<>"" AND lc5z%<11
      gSTYLE 0
      gMOVE 0,Gi%(3)+1
      gPRINTB I$(lc5z%),Wg2%
      lc5z%=lc5z%+1
    ENDWH
  ENDIF
  gUPDATE
  H%=0
ENDP



PROC KEYCTRL:
	REM Key control section
	
  IF K%=290
    IF Km% AND 4
      Sw%=Sw%+1
      IF Sw%>2
        Sw%=0
      ENDIF
      Scrw%=480-32*Sw%
      gUSE 1
      gSETWIN 0,0,Scrw%,160
      SCREEN 1,1
      Setupw:
      STATUSWIN ON, Sw%
    ELSE
      K%=Men1:
    ENDIF
  ELSEIF K%=9
    IF Det%=1
      K%=100+512
    ELSEIF Det%=2
      K%=109+512
    ELSEIF Det%=3
      K%=105+512
    ELSEIF Det%=4
      K%=99+512
    ENDIF
  ENDIF
  IF K%=291
    Help2:
  ELSEIF K%=292
    Det%=Det%+1
    IF Det%>4
      Det%=1
    ENDIF
    IF Det%=1
      GIPRINT "Displaying SITUATION"
    ELSEIF Det%=2
      GIPRINT "Displaying BACKGROUND"
    ELSEIF Det%=3
      GIPRINT "Displaying ASSESSMENT"
    ELSEIF Det%=4
      GIPRINT "Displaying RECOMMENDATION"
    ENDIF
  ELSEIF K%>=49 AND K%<=57
    Curw%=K%-49+1
    H%=3
  ELSEIF K%=48
    Curw%=10
    H%=3
  ELSEIF K%=13
    Dia1t$="Update Bullet Details"
    IF Wd%(Curp%)<>0
      GIPRINT Dia1t$
      Oldval:
      IF Dia1:<>0
        UPDATE
        Blankval:
      ENDIF
    ELSE
      Blankval:
      Dia1t$="Enter new Bullet details"
      GIPRINT Dia1t$
      Adm&=DAYS(DAY,MONTH,YEAR)
      IF Dia1:<>0
        APPEND
        Blankval:
      ENDIF
    ENDIF
  ELSEIF K%=27
    Setupw:
  ELSEIF K%=43 OR K%=512+43 OR K%=ASC(" ")
    IF Wd%(Curp%)<>0
      POSITION Wd%(Curp%)
      H%=0
      Pick$=A.PAT$
      Pick%=POS
      GIPRINT "Picking up "+A.PAT$
    ELSEIF Pick%=0
      PRINT CHR$(7)
      GIPRINT "No bullet selected!"
    ELSE
      POSITION Pick%
      Wd%(Curp%)=Pick%
      H%=1
      IF A.WAR%/30=9 AND Curw%<>9
        GIPRINT "Readmitting "+A.PAT$+"..."
        A.ADM&=DAYS(DAY,MONTH,YEAR)
        A.DIS&=0
      ELSE
        GIPRINT "Dropping "+A.PAT$+"..."
      ENDIF
      A.WAR%=Curw%*30+Curp%
      UPDATE
    ENDIF
  ELSEIF K%=8
    Dischg:
  ELSEIF K%=8192 OR K%=8193
    H%=0
  ELSEIF K%=257
    Curp%=Curp%+1
    H%=0
    IF Curp%>20
      Curp%=1
    ENDIF
  ELSEIF K%=256
    Curp%=Curp%-1
    H%=0
    IF Curp%<1
      Curp%=20
    ENDIF
  ELSEIF K%=258
    IF Curp%>10
      Curw%=Curw%+1
      H%=3
      IF Curw%>8
        Curw%=1
      ENDIF
    ELSE
      Curp%=Curp%+10
      H%=0
    ENDIF
  ELSEIF K%=259
    IF Curp%<11
      Curw%=Curw%-1
      H%=3
      IF Curw%<1
        Curw%=8
      ENDIF
    ELSE
      Curp%=Curp%-10
      H%=0
    ENDIF
  ELSEIF K%=97+512
    Curw%=10
    GIPRINT "Going to INCOMING buffer"
    H%=3
  ELSEIF K%=99+512
    IF Wd%(Curp%)
      Comm:
    ELSE
      PRINT CHR$(7)
      GIPRINT "No bullet selected!"
    ENDIF
  ELSEIF K%=100+512
    IF Wd%(Curp%)
      Diag:
    ELSE
      PRINT CHR$(7)
      GIPRINT "No bullet selected!"
    ENDIF
  ELSEIF K%=101+512
    Listdis:
  ELSEIF K%=102+512
    Findst:
  ELSEIF K%=103+512
    Findagn:
  ELSEIF K%=104+512
    Curw%=9
    GIPRINT "Going to OUTGOING buffer"
    H%=3
  ELSEIF K%=105+512
    IF Wd%(Curp%)
      RESUL:
    ELSE
      PRINT CHR$(7)
      GIPRINT "No bullet selected!"
    ENDIF
  ELSEIF K%=106+512
    Wardch:
    H%=3
  ELSEIF K%=107+512
    Dia1t$="Edit default bullet"
    GIPRINT Dia1t$
    FIRST
    WHILE A.WAR%<>-2 AND NOT EOF
      NEXT
    ENDWH
    Oldval:
    IF Dia1:<>0.0
      A.WAR%=-2
      A.DIAG$=""
      A.ADR$=""
      A.GP$=""
      A.ADM&=0
      A.MED$=""
      A.RES$=""
      A.FFM$=""
      IF EOF
        APPEND
      ELSE
        UPDATE
      ENDIF
      Blankval:
    ENDIF
  ELSEIF K%=108+512
    Gplet:
  ELSEIF K%=109+512
    IF Wd%(Curp%)
      Meds:
    ELSE
      PRINT CHR$(7)
      GIPRINT "No bullet selected!"
    ENDIF
  ELSEIF K%=110+512
    Newfile:
  ELSEIF K%=111+512
    Openfile:
  ELSEIF K%=112+512
    Prout:
  ELSEIF K%=113+512
    Cnwred:
  ELSEIF K%=114+512
    Regwr:
  ELSEIF K%=115+512
    Ptsum:
  ELSEIF K%=116+512
    H%=3
    Opfilb:
  ELSEIF K%=119+512
    About:
  ELSEIF K%=122+512
    Fontz:
  ELSE
    H%=0
  ENDIF
ENDP



PROC FONTZ:
  LOCAL lc11z%,lc12z%,lc13z%,lc14z%,lc16z%
  LOCAL lc15z&
  lc11z%=Ft%-3
  lc12z%=Ft2%-3
  lc13z%=Ft3%-3
  lc14z%=Ft4%-3
  lc15z&=Wg1%
  IF Usty%=32
    lc16z%=2
  ELSEIF Usty%=1
    lc16z%=3
  ELSEIF Usty%=2
    lc16z%=4
  ELSE
    lc16z%=1
  ENDIF
  Ffm$="Mono 8x8,Roman 8pt,Roman 11pt,Roman 13pt,Roman 16pt,Swiss 8pt,Swiss 11pt,Swiss 13pt,Swiss 16pt,Mono 6x6"
  dINIT "Select Fonts & Display options"
  dCHOICE lc16z%,"""Active"" Style:","Normal,Italic,Bold,Underlined"
  dCHOICE lc11z%,"Section font:",Ffm$
  dCHOICE lc13z%,"Current Bullet:",Ffm$
  dCHOICE lc12z%,"Diamond-field:",Ffm$
  dCHOICE lc14z%,"Active list:",Ffm$
  dLONG lc15z&,"Width of Section Window",100,400
  LOCK ON
  IF DIALOG=0
    RETURN
  ENDIF
  LOCK OFF
  Ft%=lc11z%+3
  Ft2%=lc12z%+3
  Ft3%=lc13z%+3
  Ft4%=lc14z%+3
  IF lc16z%=2
    Usty%=32
  ELSEIF lc16z%=3
    Usty%=1
  ELSEIF lc16z%=4
    Usty%=2
  ELSE
    Usty%=0
  ENDIF
  Wg1%=lc15z&
  Tabwid%=Wg1%/2
  Ffm$=""
  Ffm$=Ffm$+(CHR$(Ft%+32))+(CHR$(Ft2%+32))+(CHR$(Ft3%+32))+(CHR$(Ft4%+32))
  Ffm$=Ffm$+(CHR$(32+Tabwid%))+(CHR$(32+Usty%))
  FIRST
  WHILE NOT EOF
    IF A.WAR%=-1
      A.FFM$=Ffm$
      UPDATE
      BREAK
    ENDIF
    NEXT
  ENDWH
  SETUPW:
ENDP



PROC WARDCH:
	REM (Ward = Section)
	REM This is where you choose which
	REM Section to jump to.
	
  LOCAL lc17z%
  lc17z%=Curw%
  dINIT "Jump to Section"
  dCHOICE lc17z%,"Choose Section:",War$
  LOCK ON
  DIALOG
  LOCK OFF
  Curw%=lc17z%
ENDP



PROC Findst:
  LOCAL lc18z%
L0::
  dINIT "Enter Search String"
  dEDIT Find$,"Find:"
  LOCK ON
  lc18z%=DIALOG
  LOCK OFF
  IF lc18z%=0
    RETURN
  ENDIF
  IF Find$=""
    GOTO L0::
  ENDIF
  lc18z%=0
  FIRST
  GIPRINT "Finding from start of file..."
  DO
    lc18z%=FIND("*"+Find$+"*")
    IF lc18z%=0
      BREAK
    ENDIF
    IF A.WAR%<1
      NEXT
    ENDIF
  UNTIL A.WAR%>0
  IF lc18z%=0
    GIPRINT "None found"
  ELSE
    Curw%=A.WAR%/30
    Curp%=A.WAR%-30*Curw%
    H%=3
  ENDIF
ENDP



PROC Findagn:
  LOCAL dmyz1%,lc19z%
  IF Find$=""
    GIPRINT "Nothing to find"
    RETURN
  ENDIF
  GIPRINT "Searching for """+Find$+""""
  DO
    NEXT
    lc19z%=FIND("*"+Find$+"*")
  UNTIL A.WAR%>0 OR lc19z%=0
  IF lc19z%=0
    GIPRINT "No more found"
  ELSE
    Curw%=A.WAR%/30
    Curp%=A.WAR%-30*Curw%
    H%=3
  ENDIF
ENDP



PROC Resul:
  LOCAL lc20z$(255)
  lc20z$=A.RES$
  lc20z$=Edload$:(lc20z$,"ASSESSMENT",A.PAT$+"  "+A.HNO$,"þ")
  A.RES$=lc20z$
  UPDATE
  Det%=3
ENDP



PROC Meds:
  LOCAL lc21z$(255)
  lc21z$=A.MED$
  lc21z$=Edload$:(lc21z$,"BACKGROUND",A.PAT$+"  "+A.HNO$,"þ")
  A.MED$=lc21z$
  UPDATE
  Det%=2
ENDP



PROC Diag:
  LOCAL lc22z$(255)
  lc22z$=A.DIAG$
  lc22z$=Edload$:(lc22z$,"SITUATION",A.PAT$+"  "+A.HNO$,"þ")
  A.DIAG$=lc22z$
  UPDATE
  Det%=1
ENDP



PROC Comm:
  LOCAL lc23z$(255)
  lc23z$=A.FFM$
  lc23z$=Edload$:(lc23z$,"RECOMMENDATION",A.PAT$+"  "+A.HNO$,"þ")
  A.FFM$=lc23z$
  UPDATE
  Det%=4
ENDP



PROC Prout:
  LOCAL lc24z$(128),lc25z%,dmyz1$(2),lc26z%,lc28z%
  LOCAL lc27z%
  lc24z$="LOC::M:\WRD\BULLETPR.WRD"
  dINIT "Output Printout of Bullet Data"
  dFILE lc24z$,"Output to WORD file:",17
  dTEXT "","Use WORD editor to make changes, then print."
  LOCK ON
  IF DIALOG
    LOCK OFF
    TRAP LOPEN lc24z$
    lc25z%=ERR
    IF lc25z%=0
      GIPRINT "Outputting to "+lc24z$
      lc26z%=1
      Itemise:(War$,",")
      BUSY "Busy...",1,1
      DO
        LPRINT "++++++++ SECTION:",I$(lc26z%),"++++++++"
        B%=1
        DO
          Wd%(B%)=0
          B%=B%+1
        UNTIL B%>20
        FIRST
        DO
          lc27z%=A.WAR%/30
          lc28z%=A.WAR%-30*lc27z%
          IF lc26z%=lc27z%
            Wd%(lc28z%)=POS
          ENDIF
          NEXT
        UNTIL EOF
        B%=1
        DO
          IF Wd%(B%)>0
            POSITION Wd%(B%)
            LPRINT "******  ",A.PAT$;", DoB:",Dt$:(A.DOB&),"ID:",A.HNO$+CHR$(10);
            IF A.DIAG$<>""
              LPRINT "<SITIUATION>"+DIAG$+CHR$(10);
            ENDIF
            IF A.MED$<>""
              LPRINT "<BACKGROUND>:",A.MED$+CHR$(10);
            ENDIF
            IF A.RES$<>""
              LPRINT "<ASSESSMENT>:",A.RES$+CHR$(10);
            ENDIF
            IF A.FFM$<>""
              LPRINT "<RECOMMENDATION>:",A.FFM$+CHR$(10);
            ENDIF
            LPRINT "--------"
          ENDIF
          B%=B%+1
        UNTIL B%>20
        lc26z%=lc26z%+1
      UNTIL lc26z%>8
      LCLOSE
      BUSY OFF
    ELSE
      LOCK OFF
      PRINT CHR$(7)
      GIPRINT ERR$(lc25z%)
    ENDIF
  ENDIF
ENDP



PROC LISTDIS:
  LOCAL dmyz1%,lc33z%,lc32z%,lc31z%,lc30z%
  LOCAL lc34z%,lc35z%,lc36z%,lc29z%
  lc29z%=240
  GIPRINT "Displaying Active List"
  gUSE G1%
  gSETWIN 0,0,Scrw%,160
  gFONT Ft4%
  gINFO Gi%()
  lc30z%=0
  lc31z%=(148-Gi%(5))/(Gi%(3)+2)+1
L170::
  lc32z%=1
  Diag$=""
  Res$=""
  gCLS
  FIRST
  WHILE NOT EOF
    IF Det%=1
      Ffm$=A.DIAG$
    ELSEIF Det%=2
      Ffm$=A.MED$
    ELSEIF Det%=3
      Ffm$=A.RES$
    ELSEIF Det%=4
      Ffm$=A.FFM$
    ENDIF
    IF Ffm$<>"" AND A.WAR%>0
      lc33z%=POS/200
      Diag$=Diag$+(CHR$(lc33z%+32))
      Res$=Res$+(CHR$(32+POS-lc33z%*200))
    ENDIF
    NEXT
    IF LEN(Res$)>lc29z%
      IF Regown$<>""
        GIPRINT "Only allowed "+GEN$(lc29z%,3)+" entries in unregistered version"
      ELSE
        GIPRINT "Active list overflow! Only "+GEN$(lc29z%,3)+" entries included"
      ENDIF
      BREAK
    ENDIF
  ENDWH
  IF Res$=""
    GIPRINT "No active entries"
  ELSE
L545::
    gUPDATE OFF
    gCLS
    lc32z%=1
    IF lc34z%<1
      lc34z%=1
    ELSEIF lc34z%>LEN(Res$)
      lc34z%=LEN(Res$)
    ENDIF
    gAT 2,9
    gFONT 9
    Med$="Active Bullets: "+GEN$(LEN(Res$),3)+"      Page "+(GEN$(lc30z%+1,2))+" of "+GEN$((LEN(Res$)+lc31z%-1)/lc31z%,2)
    gXPRINT Med$,2
    gFONT Ft4%
    gAT 0,Gi%(5)+12
    DO
      lc35z%=lc32z%+lc31z%*lc30z%
      Wd%(lc32z%)=200*(ASC(MID$(Diag$,lc35z%,1))-32)+ASC(MID$(Res$,lc35z%,1))-32
      POSITION Wd%(lc32z%)
      IF Det%=1
        Ffm$=A.DIAG$
      ELSEIF Det%=2
        Ffm$=A.MED$
      ELSEIF Det%=3
        Ffm$=A.RES$
      ELSEIF Det%=4
        Ffm$=A.FFM$
      ENDIF
      gSTYLE Usty%
      gPRINTB A.PAT$,Tabwid%-2
      gSTYLE 0
      gMOVE Tabwid%,0
      gPRINTB Ffm$,Scrw%-Tabwid%
      gMOVE -Tabwid%,Gi%(3)+2
      lc32z%=lc32z%+1
    UNTIL lc32z%>lc31z% OR lc35z%>=LEN(Res$)
    gUPDATE
    DO
      IF lc34z%<1
        lc34z%=1
      ELSEIF lc34z%>LEN(Res$)
        lc34z%=LEN(Res$)
      ENDIF
      lc32z%=lc34z%-lc30z%*lc31z%
      IF lc32z%>lc31z%
        lc30z%=(lc34z%-1)/lc31z%
        GOTO L545::
      ENDIF
      IF lc32z%<1
        lc30z%=(lc34z%-1)/lc31z%
        GOTO L545::
      ENDIF
      gAT 0,Gi%(5)+12+(lc32z%-1)*(Gi%(3)+2)
      gGREY 1
      gSTYLE 4
      gPRINTB "",Tabwid%-2
      K%=Getk%:
      gSTYLE 0
      gPRINTB "",Tabwid%-2
      gGREY 2
      IF K%=256
        lc34z%=lc34z%-1
        CONTINUE
      ENDIF
      IF K%=257
        lc34z%=lc34z%+1
        CONTINUE
      ENDIF
      IF K%=258
        lc34z%=lc34z%+lc31z%
        CONTINUE
      ENDIF
      IF K%=259
        lc34z%=lc34z%-lc31z%
        CONTINUE
      ENDIF
      IF K%=261
        lc34z%=LEN(Res$)
        CONTINUE
      ENDIF
      IF K%=260
        lc34z%=1
        CONTINUE
      ENDIF
      IF K%=13 AND Wd%(lc32z%)>0
        POSITION Wd%(lc32z%)
        Curw%=A.WAR%/30
        Curp%=A.WAR%-Curw%*30
        BREAK
        CONTINUE
      ENDIF
      IF K%=8 AND Wd%(lc32z%)>0
        dINIT
        dTEXT "","Clear active field?",258
        dBUTTONS "Yes",%y,"No",%n
        lc36z%=DIALOG
        IF lc36z%=121
          POSITION Wd%(lc32z%)
          IF Det%=1
            A.DIAG$=""
          ELSEIF Det%=2
            A.MED$=""
          ELSEIF Det%=3
            A.RES$=""
          ELSEIF Det%=4
            A.FFM$=""
          ENDIF
          UPDATE
        ENDIF
        FIRST
        GOTO L170::
        CONTINUE
      ENDIF
      IF K%=291
        dINIT "Active list view"
        dTEXT "Up:","Previous entry"
        dTEXT "Down:","Next entry"
        dTEXT "Left:","Previous page"
        dTEXT "Right:","Next page"
        dTEXT "Del:","Clear active field"
        dTEXT "Esc:","Return to Sections"
        dTEXT "Enter:","Locate Bullet"
        LOCK ON
        DIALOG
        LOCK OFF
        CONTINUE
      ENDIF
      IF K%=27
        BREAK
        CONTINUE
      ENDIF
      GIPRINT "Press Esc to return to Sections, Help for help"
    UNTIL K%=27
  ENDIF
  SETUPW:
ENDP



