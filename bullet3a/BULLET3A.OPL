  lc48z$=pr1z$
  Itemise:(pr1z$,pr4z$)
  lc49z%=1
  DO
    lc50z$(lc49z%)=I$(lc49z%)
    lc49z%=lc49z%+1
  UNTIL lc49z%>10
L139::
  dINIT pr3z$+": "+pr2z$
  dEDIT lc50z$(),"þ"
  dEDIT lc50z$(2),"þ"
  dEDIT lc50z$(3),"þ"
  dEDIT lc50z$(4),"þ"
  dEDIT lc50z$(5),"þ"
  dEDIT lc50z$(6),"þ"
  dEDIT lc50z$(7),"þ"
  dEDIT lc50z$(8),"þ"
  LOCK ON
  IF DIALOG=0
    LOCK OFF
    RETURN pr1z$
  ENDIF
  LOCK OFF
  lc49z%=1
  DO
    IF LOC(lc50z$(lc49z%),pr4z$)<>0
      PRINT CHR$(7)
      GIPRINT "You mustn't include """+pr4z$+""""
      GOTO L139::
    ENDIF
    lc49z%=lc49z%+1
  UNTIL lc49z%>8
  lc49z%=1
  lc48z$=""
  DO
    IF lc50z$(lc49z%)<>""
      lc48z$=lc48z$+lc50z$(lc49z%)+pr4z$
    ENDIF
    lc49z%=lc49z%+1
  UNTIL lc49z%>10
  IF lc48z$<>""
    lc48z$=LEFT$(lc48z$,LEN(lc48z$)-1)
  ENDIF
  RETURN lc48z$
ENDP



