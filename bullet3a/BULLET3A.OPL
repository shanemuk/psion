    B.A$=Regown$
    B.B$=Code$
    APPEND
    CLOSE
  ENDIF
ENDP



PROC Regchek%:(pr8z$,pr9z$)
REM This Procedure used to check
REM registration status. Let's lose that!

  LOCAL lc65z%,lc66z%,lc67z%,lc68z%,lc63z$(60)
  LOCAL lc64z$(10)
  lc63z$="Bullet3a Registered User. Permission Granted"
  RETURN -1
  REM The above line just returns that
  REM Bullet3a is registered. Forget all
  REM the rest of this stuff.
  
  IF LEN(pr8z$)<10
    Regown$="Psion Hero"
    lc64z$="Freeware"
  ENDIF
  lc63z$=LEFT$(pr8z$+lc63z$,30)
  lc65z%=1
  lc66z%=11
  lc64z$=""
  DO
    lc67z%=lc66z%
    lc66z%=ASC(MID$(lc63z$,lc65z%,1))
    lc67z%=lc67z%+lc66z%
    lc68z%=(lc67z% AND 31)+65-1
    lc64z$=lc64z$+CHR$(lc68z%)
    lc65z%=lc65z%+1
    lc66z%=lc67z%
  UNTIL lc65z%>10
  IF lc64z$=pr9z$
    RETURN -1
  ELSE
    Regown$="Psion Hero"
    lc64z$="Freeware"
    RETURN 0
  ENDIF
ENDP



PROC Itemise:(pr10z$,pr11z$)
  LOCAL lc69z$(255)
  lc69z$=pr10z$
  N%=1
  DO
    B%=LOC(lc69z$,pr11z$)
    IF B%>0
      I$(N%)=LEFT$(lc69z$,B%-1)
      lc69z$=RIGHT$(lc69z$,LEN(lc69z$)-B%)
    ELSE
      IF LEN(lc69z$)>40
        lc69z$=LEFT$(lc69z$,40)
      ENDIF
      I$(N%)=lc69z$
      lc69z$=""
    ENDIF
    N%=N%+1
  UNTIL lc69z$="" OR N%>10
  WHILE N%<=10
    I$(N%)=""
    N%=N%+1
  ENDWH
ENDP

